{
    // Change this to match your project
    "include": [
        "lib/**/*"
    ],
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "dist",

        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,

        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true
    }
}
