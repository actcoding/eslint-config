{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "clean": {
            "cache": false
        },
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": [
                "dist/**"
            ]
        },
        "publish": {
            "cache": false
        },
        "dev": {
            "persistent": true
        },
        "start": {
            "persistent": true,
            "cache": false,
            "dependsOn": ["^build"]
        }
    }
}
