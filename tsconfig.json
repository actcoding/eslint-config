{
    // Change this to match your project
    "include": [
        "index.js",
        "src/**/*"
    ],
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",

        "allowJs": true,
        "skipLibCheck": true,

        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true
    }
}
